@model Models.Admin

@{
    ViewData["Title"] = "Add_Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-center align-items-center mt-4">
    <h1 class="row-header text-center">Admin</h1>
    <div class="my-2">
        <a asp-action="Index" role="button" class="btn btn-warning btn-sm my-3">Back to List</a>
    </div>
    <div class="card col-md-12 col-lg-12 px-2 py-2" style="border-radius:0">
        <div class="card-body px-2">
            <form asp-action="Add_Edit" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-12 my-3">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group my-3">
                                <label asp-for="FullName" class="control-label"></label>
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group my-3">
                                <label asp-for="AdminName" class="control-label"></label>
                                <input asp-for="AdminName" class="form-control" />
                                <span asp-validation-for="AdminName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 my-3">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group my-3">
                                
                                <label asp-for="RoleId" class="control-label">Role: </label>
                                <select asp-for="RoleId" asp-items="@ViewBag.Role">
                                    <option value="">Please Select the Role</option>
                                </select>
                                <span asp-validation-for="RoleId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group my-3">
                                <label asp-for="Image" class="control-label"></label>
                                <input asp-for="Image" class="form-control" type="file" />
                                <span asp-validation-for="Image" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 my-3">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group my-3">
                                <label asp-for="FullAddress" class="control-label"></label>
                                <input asp-for="FullAddress" class="form-control" />
                                <span asp-validation-for="FullAddress" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group my-3">

                                <label asp-for="PhoneNumber" class="control-label"></label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group my-3">

                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group my-3">

                    <center><input type="submit" value=@ViewBag.Action class="btn btn-success" /></center>
                </div>
            </form>
        </div>
    </div>


