@model List<Models.Food>
@if (Model != null)
{
    @foreach (var food in Model)
    {
        <div class="col-md-4 col-sm-6 d-flex align-items-stretch">
            <div class="card my-3">

                <div class="card-body d-flex flex-column">

                    <img src="data:image/png;base64,@Convert.ToBase64String(food.BannerImage)" class="d-flex card-img img-fluid" />


                    <h3 class="text-center head_Name">
                        @food.FoodName
                    </h3>
                    <div class="col-12 mb-0 mt-auto">
                        <div class="row my-1">
                            <div class="col-6">
                                <p class="text-start"><b> ₹ @food.FoodAmount</b></p>
                            </div>
                            <div class="col-6">
                                <p class="text-end text-muted">@food.Quantity left</p>
                            </div>
                        </div>
                        <a asp-controller="Home" asp-action="FoodDetails" asp-route-FoodID="@food.FoodId" role="button" class="btn btn-success float-start" title="Buy">Details</a>
                        @*<a role="button" class="btn btn-warning" title="Details">Details</a>*@
                        <a role="button" class="btn btn-block btn-danger float-end" asp-action="AddToCart" asp-controller="Cart" asp-route-FoodID="@food.FoodId" title="Add To Cart"><i class="fa-solid fa-cart-shopping"></i></a>


                    </div>


                </div>

                @*<p class="text-justify">@food.FoodDesc</p>*@





            </div>
        </div>
    }

}
else
{
    <h3 class="text-center row-header">No items</h3>
}


