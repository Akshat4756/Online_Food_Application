@model Models.SubCategory

@{
    ViewData["Title"] = "Add_Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row justify-content-center align-items-center mt-4">
    <h1 class="row-header text-center">Sub Category</h1>
    <div class="card col-md-12 col-lg-12 px-2 py-2" style="border-radius:0">
        <div class="card-body px-2">
            <form asp-action="Add_Edit" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               
                <div class="form-group mt-2">
                    <label class="form-label">Select Category:</label>
                    <select class="form-control" asp-for="CatId" asp-items="@(ViewBag.Categories)">
                        <option value="0">Please Select Category</option>
                    </select>
                    <span asp-validation-for="CatId" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="SubCatName" class="control-label"></label>
                    <input asp-for="SubCatName" class="form-control" />
                    <span asp-validation-for="SubCatName" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <div class="row">
                        <div class="col-md-6">
                    <label asp-for="BannerImg" class="control-label"></label>
                    <input asp-for="BannerImg" type="file" class="form-control" />
                    <span asp-validation-for="BannerImg" class="text-danger"></span>
                    </div>
                        <div class="col-md-6">
                    <label asp-for="IconImg" class="control-label"></label>
                    <input asp-for="IconImg" type="file" class="form-control" />
                    <span asp-validation-for="IconImg" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="SubCatDescription" class="control-label"></label>
                    <textarea rows="8" asp-for="SubCatDescription" type="text" class="form-control  form-control-sm my-2"></textarea>
                    <br />
                    <span asp-validation-for="SubCatDescription" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <center><input type="submit" value=@ViewBag.Action class="btn btn-outline-dark" /></center>
                </div>
            </form>
            </div>
            </div>
            </div>

<div>
    <a asp-action="Index" role="button" class="btn btn-warning btn-sm mt-3">Back to List</a>
</div>

